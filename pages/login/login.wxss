.login-text-container{
  box-sizing: border-box;
  height: 70rpx;
  width: 140rpx;
  border-bottom: 20rpx solid #5bb8f3;
  position: absolute;
  top: 230rpx;
  left: 60rpx;
  text-align: center;
}
.login-text{
  position: relative;
  top: 5rpx;
  font-size: 50rpx;
}
.register-tip{
  position: absolute;
  top: 330rpx;
  left: 60rpx;
  font-size: 29rpx;
}
.register-navigator{
  display: inline;
  color: #5bb8f3;
  background: transparent;
}
form{
  width: 600rpx;
  position: absolute;
  top:534rpx;
  left: 60rpx;
}
input{
  box-sizing: border-box;
  width: 100%;
  border-bottom: 3rpx solid #d1cfc6;
  margin-bottom: 91rpx;
  padding: 0 0 15rpx 80rpx;
  font-size: 29rpx;
}
.button-container{
  width: 600rpx;
  position: absolute;
  top: 790rpx;
}
.button-container button{
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 40rpx;
}
.button-login{
  border: 1rpx solid #5bb8f3;
  background-color: transparent;
}
.button-esay-login{
  margin-top: 36rpx;
  background-color: #5bb8f3;
}