.slider-right{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  position: relative;
  left: 0;
  padding-bottom: 111rpx;
  transition: left 0.5s;
}
.top{
  box-sizing: border-box;
  height: 146rpx;
  width: 100%;
  background: #5bb8f3;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 40rpx;
  font-size: 36rpx;
  color: white;
}
.top image{
  height: 48rpx;
  width: 48rpx;
  position: absolute;
  left: 50rpx;
  z-index: 4;
}
.main{
  box-sizing: border-box;
  height: 100%;
  background: white;
  position: relative;
  padding: 196rpx 35rpx 35rpx 35rpx;
}
.main-top{
  width: 100%;
  height: 210rpx;
}
.input{
  box-sizing: border-box;
  height: 65rpx;
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
}
.input input{
  box-sizing: border-box;
  height: 65rpx;
  width: 100%;
  border: 1rpx solid #9c9c9c;
  border-radius: 32.5rpx;
  padding: 0 145rpx 0 79rpx;
  font-size: 25rpx;
}
.input image{
  height: 38rpx;
  width: 38rpx;
  position: absolute;
  right: 79rpx;
  z-index: 2;
}
.input image:active{
  transform: scale(0.95)
}
.equipment-keys{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  position: relative;
  z-index: 2;
}
.equipment-key{
  box-sizing: border-box;
  border: 0.5rpx solid #c7c7c7;
  padding: 5rpx 10rpx;
  margin: 30rpx 20rpx 0 20rpx;
  font-size: 23rpx;
  color: #c7c7c7;
}
.main-content{
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  padding: 441rpx 35rpx 0 35rpx;
}
.equipment{
  width: 100%;
  display: flex;
  align-items: center;
  margin: 53rpx 0;
}
.equipment image{
  width: 195rpx;
  height: 150rpx;
}
.equipment-inf{
  box-sizing: border-box;
  flex: auto;
  display: flex;
  flex-direction: column;
  position: relative;
  padding-left: 50rpx;
  font-size: 23rpx;
}
.equipment-inf rich-text:nth-child(2){
  margin: 15rpx 0 33rpx 0;
}
.counter{
  box-sizing: border-box;
  width: 143rpx;
  height: 35rpx;
  border: 0.5rpx solid black;
  border-radius: 10rpx;
  display: flex;
  position: absolute;
  bottom: 70rpx;
  right: 0;
  text-align: center;
}
.button-counter{
  width: 30%;
  height: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.button-counter:active{
  font-size: 25rpx;
}
.selected-count{
  height: 35rpx;
  border-left: 0.5rpx solid black;
  border-right: 0.5rpx solid black;
  flex: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.button-borrow,.button-borrowed{
  box-sizing: border-box;
  width: 143rpx;
  height: 35rpx;
  line-height: 35rpx;
  border-radius: 10rpx;
  background: #5bb8f3;
  position: absolute;
  bottom: 0;
  right: 0;
  text-align: center;
  color: white;
}
.bottom-tip{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 22rpx;
  color: #cbcbcb;
}
.slider-left{
  box-sizing: border-box;
  width: 265rpx;
  height: 100%;
  background: #5bb9f342;
  position: absolute;
  left: -265rpx;
  top: 0;
  z-index: 3;
  padding: 140rpx 0 111rpx 0;
  transition: left 0.5s;
}
bottom-navigation{
  height: 111rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  z-index: 4;
}