.container{
  background: #f5f5f5;
}
.back-img{
  width: 750rpx;
  height: 400rpx;
  position: absolute;
}
.select-week{
  position: absolute;
  top: 75rpx;
  z-index: 2;
  display: flex;
  align-items: center;
  font-size: 40rpx;
  color: white;
}
.select-week image{
  width: 40rpx;
  height: 40rpx;
}
.week-list{
  width: 4em;
  height: 200rpx;
  border: 1px solid white;
  background: rgba(255, 255, 255, 0.9);
  position: absolute;
  top: 130rpx;
  z-index: 3;
}
.week-list view{
  width: 100%;
  border-top: 1rpx solid #D8D8D8;
  padding: 10rpx 0;
  font-size: 35rpx;
  color: #5bb8f3;
}
.select-term{
  position: absolute;
  top: 133rpx;
  z-index: 2;
  font-size: 27rpx;
  color: white;
}
.class-list{
  /* height: 1045rpx; */
  box-sizing: border-box;
  height: 100%;
  padding: 178rpx 0 111rpx 0;
  /* background: rgba(255,255,255,0.3); */
  position: absolute;
  top: 0;
  left: 0;
  /* top: 178rpx; */
}
.class-container{
  box-sizing: border-box;
  width: 696rpx;
  border-radius: 17rpx;
  display: flex;
  align-items: center;
  background: white;
  margin: 0 auto 30rpx auto;
  padding: 60rpx 33rpx;
}
.class-img{
  width: 300rpx;
  height: 300rpx;
  border-radius: 17rpx;
}
.class-inf{
  box-sizing: border-box;
  width: 344rpx;
  /* border: 1rpx solid red; */
}
.class-inf image{
  height: 28rpx;
  width: 28rpx;
  margin-right: 10rpx;
}
.inf-subject{
  margin-left: 45rpx;
  overflow: auto;
  white-space: nowrap;
  font-size: 34rpx;
}
.inf-title{
  white-space: nowrap;
  overflow: auto;
  font-size: 26rpx;
  margin: 15rpx 0 24rpx 78rpx;
}
.inf-time,.inf-place{
  display: flex;
  align-items: center;
  font-size: 22rpx;
  margin-left: 55rpx;
  margin-top: 18rpx;
}
.inf-time{
  color: #ff7c3b;
}
.inf-place{
  color: #5bb8f3;
}
.inf-button{
  width: 290rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 13rpx;
  background: #5bb8f3;
  margin: 28rpx 0 0 40rpx;
  font-size: 26rpx;
  color: white;
}
.inf-button:active{
  color: rgba(255, 255, 255, 0.8)
}
.bottom-tip{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 22rpx;
  color: #cbcbcb;
}
bottom-navigation{
  height: 111rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  z-index: 2;
}
