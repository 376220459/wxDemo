.top{
  box-sizing: border-box;
  height: 146rpx;
  width: 100%;
  background: #5bb8f3;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 40rpx;
  font-size: 36rpx;
  color: white;
}
.body{
  box-sizing: border-box;
  height: 100%;
  padding: 146rpx 0 111rpx 0;
  position: absolute;
  top: 0;
  left: 0;
}
.timetable{
  box-sizing: border-box;
  width: 100%;
  height: 600rpx;
  background: #f5f5f52c;
  background: #f5f5f5;
  position: relative;
  display: flex;
  align-content: space-around;
  padding: 24rpx 30rpx;
}
.column{
  box-sizing: border-box;
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
}
.column view{
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #cbcbcb;
  display: flex;
  justify-content: center;
  align-items: center;
}
.column-week{
  line-height: 30rpx;
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
}
.column-time{
  font-size: 18rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}
.column-time .mark{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}
.tip{
  position: absolute;
  right: 60rpx;
  bottom: 20rpx;
  font-size: 20rpx;
}
.tip image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 50rpx;
}
.select-buttons{
  width: 100%;
  height: 350rpx;
  position: relative;
}
.select-buttons view{
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  border-radius: 50%;
  background-size: cover;
  font-size: 25rpx;
  color: white;
  text-align: center;
}
.select-buttons view:active{
  transform: scale(0.95);
}
.experimental-button{
  background: url('http://i1.fuimg.com/684412/c7e6f31dfdbc3583.png');
  position: absolute;
  left: 150rpx;
  top: 150rpx;
}
.study-button{
  background: url(http://i1.fuimg.com/684412/e80b7f02ad9ccb63.png);
  position: absolute;
  left: 425rpx;
  top: 100rpx;
}
bottom-navigation{
  height: 111rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  z-index: 2;
}