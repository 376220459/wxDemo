.experimental-data-container{
  width: 100%;
  background: white;
  flex: auto;
}
.data-title{
  box-sizing: border-box;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  border-left: 15rpx solid #5bb8f3;
  margin: 37rpx 0 84rpx 0;
  padding-left: 29rpx;
  font-size: 28rpx;
}
.data-content-container{
  height: 320rpx;
}
.data{
  box-sizing: border-box;
  height: 104rpx;
  width: 700rpx;
  border-bottom: 0.5rpx solid #cbcbcb;
  margin-left: 50rpx;
  display: flex;
  align-items: center;
}
.data image{
  width: 66rpx;
  height: 66rpx;
  margin-right: 50rpx;
}
.data .data-name{
  width: 580rpx;
  overflow: auto;
  font-size: 22rpx;
  white-space: nowrap;
  margin-bottom: 12rpx;
}
.data .data-size{
  font-size: 20rpx;
  color: #a0a0a0;
}

