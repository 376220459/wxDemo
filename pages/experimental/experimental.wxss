.step-container{
  width: 100%;
  background: white;
  position: relative;
  display: flex;
  align-items: center;
  padding: 29rpx 0;
  margin-top: 40rpx;
}
.step-index{
  /* box-sizing: border-box; */
  width: 1.2em;
  height: 90rpx;
  line-height: 24rpx;
  border-left: 6rpx solid #5bb8f3;
  position: absolute;
  top: 7rpx;
  left: 0;
  display: flex;
  align-items: center;
  padding-left: 13rpx;
  font-size: 23rpx;
  color: #5bb8f3;
}
.step-whole{
  width: 520rpx;
  margin-left: 130rpx;
}
.step-title{
  font-size: 24rpx;
  margin-bottom: 23rpx;
}
.step-content{
  font-size: 22rpx;
  color: #a0a0a0;
  white-space: pre-wrap;
}
.step-imgs-container{
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.step-img image{
  width: 150rpx;
  height: 150rpx;
  margin: 0 10rpx;
}
.add-step{
  width: 200rpx;
  display: flex;
  align-items: center;
  margin: 40rpx auto;
}
.add-step:active view{
  color: #5bb9f3c5;
}
.add-step image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
.add-step view{
  font-size: 24rpx;
  color: #5bb8f3;
}