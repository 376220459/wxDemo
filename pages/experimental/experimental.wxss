.container{
  background: #f5f5f5;
}
.top{
  box-sizing: border-box;
  height: 146rpx;
  width: 100%;
  background: #5bb8f3;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 40rpx;
  font-size: 36rpx;
  color: white;
}
.top image{
  height: 44rpx;
  width: 44rpx;
  position: absolute;
  left: 54rpx;
}
.top rich-text{
  width: 50%;
  white-space: nowrap;
  overflow: auto;
  text-align: center;
}
.tab{
  box-sizing: border-box;
  height: 60rpx;
  width: 100%;
  background: white;
  position: absolute;
  top: 145rpx;
  left: 0;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 82rpx;
  font-size: 28rpx;
  color: #bfbfbf;
}
.tab view{
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 15rpx;
}
.tab-content{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  padding-top: 206rpx;
  overflow: auto;
}
